<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="NavTheme">
        <item name="android:textSize">17sp</item>
        <item name="fontPath">fonts/IRANSans_No_Number_Translation.ttf</item>
    </style>

    <style name="ButtonMatchParent">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonWrapContent">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">?font_xsmall</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">fonts/IRANSans_Bold.ttf</item>
    </style>

    <style name="ButtonInstalledContent">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">?font_xsmall</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontPath">fonts/IRANSans_Bold.ttf</item>
    </style>
    <style name="ButtonPeerAddContent">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">88dp</item>
        <item name="android:layout_marginRight">88dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf</item>
    </style>
    <style name="ButtonPeerBackContent">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">88dp</item>
        <item name="android:layout_marginRight">87dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1C3C6D</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf</item>
    </style>

    <style name="ButtonPeerInject">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_inject</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf</item>
    </style>

    <style name="ButtonP2P_ON">
        <item name="android:layout_width">179dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">90dp</item>
        <item name="android:layout_marginRight">91dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_p2p_on</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf</item>
    </style>
    <style name="ButtonPeerCancel">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1C3C6D</item>
        <item name="android:background">@drawable/button_cancel</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf</item>
    </style>

    <style name="ButtonP2POff">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">90dp</item>
        <item name="android:layout_marginRight">85dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1C3C6D</item>
        <item name="android:background">@drawable/button_p2p_off</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf</item>
    </style>
    <style name="EditTextHint" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorError">@color/colorPrimary</item>
    </style>
    <style name="text_view_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#111111</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf"</item>
    </style>

    <style name="text_view_peerstyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontPath">fonts/IRANSans_Bold_No_Number_Translation.ttf</item>
    </style>
    <style name="text_view_clickstyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#287CFC</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf"</item>
    </style>
    <style name="text_view_active">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontPath">fonts/IRANSans_Bold.ttf"</item>
    </style>
    <style name="text_view_14clickstyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#287CFC</item>
        <item name="fontPath">fonts/IRANSans_Bold.ttf"</item>
    </style>
    <style name="text_view_16style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontPath">fonts/IRANSans_Bold.ttf"</item>
    </style>
    <style name="text_view_14style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf"</item>
    </style>
    <style name="text_view_14colorstyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#111111</item>
        <item name="fontPath">fonts/IRANSans_Edit.ttf"</item>
    </style>
    <style name="Link" parent="AppTheme">
        <item name="colorAccent">@color/blue</item>
    </style>
    <style name="FontStyle">
    </style>

    <style name="FontStyle.Small">
        <item name="font_xsmall">12sp</item>
        <item name="font_small">14sp</item>
        <item name="font_medium">16sp</item>
        <item name="font_large">18sp</item>
        <item name="font_xlarge">20sp</item>
    </style>

    <style name="FontStyle.Medium">
        <item name="font_xsmall">14sp</item>
        <item name="font_small">16sp</item>
        <item name="font_medium">18sp</item>
        <item name="font_large">20sp</item>
        <item name="font_xlarge">22sp</item>
    </style>

    <style name="FontStyle.Large">
        <item name="font_xsmall">16sp</item>
        <item name="font_small">18sp</item>
        <item name="font_medium">20sp</item>
        <item name="font_large">22sp</item>
        <item name="font_xlarge">24sp</item>
    </style>

    <style name="MyProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <!-- override attributes here -->
    </style>
