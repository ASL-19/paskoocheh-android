<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right|bottom"
    android:filterTouchesWhenObscured="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/tool_header"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:orientation="vertical"

                android:layout_alignTop="@id/icon_view"
                android:layout_toLeftOf="@id/icon_view">

                <TextView
                    android:id="@+id/title_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="?font_xlarge"
                    fontPath="fonts/IRANSans_Bold.ttf"/>

                <TextView
                    android:id="@+id/description_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textSize="?font_small"/>

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textSize="?font_small"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/install_tools"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/icon_view"
                android:layout_alignParentBottom="true">

                <Button
                    android:id="@+id/email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/email"
                    style="@style/ButtonWrapContent"
                    android:background="@drawable/button_regular"/>

                <Button
                    android:id="@+id/play_store_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="@string/play_store"
                    style="@style/ButtonWrapContent"
                    android:background="@drawable/button_regular"/>

                <Button
                    android:id="@+id/install_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="@string/install"
                    style="@style/ButtonWrapContent"
                    android:background="@drawable/button_regular" />

                <Button
                    android:id="@+id/uninstall_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    style="@style/ButtonWrapContent"
                    android:text="@string/uninstall"
                    android:background="@drawable/button_regular"/>

            </LinearLayout>

            <Button
                android:id="@+id/update_button"
                android:visibility="gone"
                style="@style/ButtonWrapContent"
                android:text="@string/update"
                android:background="@drawable/button_update"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:layout_above="@id/install_tools"/>
        </RelativeLayout>

        <View
            android:id="@+id/badge_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#CCCCCC"/>

        <LinearLayout
            android:id="@+id/badges"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_margin="7dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/badge_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge_download"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignBottom="@id/badge_download"
                    android:layout_alignLeft="@id/badge_download"
                    android:layout_alignRight="@id/badge_download"
                    android:layout_alignTop="@id/badge_download">

                    <TextView
                        android:id="@+id/badge_download_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_alignLeft="@id/badge_download"
                    android:layout_alignRight="@id/badge_download"
                    android:layout_below="@id/badge_download"
                    android:text="@string/number_downloads"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/badge_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge_star"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignBottom="@id/badge_rating"
                    android:layout_alignLeft="@id/badge_rating"
                    android:layout_alignRight="@id/badge_rating"
                    android:layout_alignTop="@id/badge_rating">

                    <TextView
                        android:id="@+id/badge_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_alignLeft="@id/badge_rating"
                    android:layout_alignRight="@id/badge_rating"
                    android:layout_below="@id/badge_rating">

                    <ImageView
                        android:id="@+id/rating_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_person"/>

                    <TextView
                        android:id="@+id/badge_rating_total"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@id/rating_icon"
                        android:layout_toEndOf="@id/rating_icon"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/badge_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_badge_message"/>

                <TextView
                    android:id="@+id/badge_category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_alignLeft="@id/badge_category"
                    android:layout_alignRight="@id/badge_category"
                    android:layout_below="@id/badge_category"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/app_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#CCCCCC"/>

        <LinearLayout
            android:id="@+id/toolBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <HorizontalScrollView
                android:id="@+id/horizontal_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/rate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:text="@string/rate_this_app"
                android:textColor="#0B233C"
                android:textSize="?font_xlarge"
                fontPath="fonts/IRANSans_Bold.ttf" />

            <View
                android:id="@+id/rate_title_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#CCCCCC"/>

            <android.widget.RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" />


            <TextView
                android:id="@+id/description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:text="@string/description"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="?font_xlarge"
                fontPath="fonts/IRANSans_Bold.ttf" />

            <View
                android:id="@+id/description_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#CCCCCC"/>

            <TextView
                android:id="@+id/description_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:minWidth="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:text="@string/read_more"
                android:textColor="@color/colorPrimaryDark"
                fontPath="fonts/IRANSans_Bold.ttf"/>

            <TextView
                android:id="@+id/review_title"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="40dp"
                android:text="@string/reviews"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="?font_xlarge"
                fontPath="fonts/IRANSans_Bold.ttf" />

            <View
                android:id="@+id/review_divider"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#CCCCCC"/>

            <org.asl19.paskoocheh.utils.NonScrollListView
                android:id="@+id/list_review"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants"
                android:dividerHeight="0dp"
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/read_more_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:minHeight="25dp"
                android:minWidth="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:text="@string/read_more"
                android:textColor="@color/colorPrimaryDark"
                fontPath="fonts/IRANSans_Bold.ttf"/>

            <View
                android:id="@+id/share_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#CCCCCC"/>

            <LinearLayout
                android:id="@+id/share"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_share"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:textColor="@color/colorPrimaryDark"
                    fontPath="fonts/IRANSans_Bold.ttf"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>