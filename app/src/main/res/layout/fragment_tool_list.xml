<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:filterTouchesWhenObscured="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:fitsSystemWindows="true"
            app:layout_behavior="org.asl19.paskoocheh.utils.FlingBehavior">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll"
                app:contentScrim="?attr/colorPrimary"
                android:fitsSystemWindows="true">

                <RelativeLayout
                    android:id="@+id/featured_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2075B9"
                    android:fitsSystemWindows="true">

                    <LinearLayout
                        android:id="@+id/featured"
                        android:background="@color/colorPrimary"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/featured"
                            android:textColor="@color/white"
                            android:gravity="left|start"
                            android:padding="15dp"
                            fontPath="fonts/IRANSans_Bold.ttf"/>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/my_recycler_featured"
                        android:layout_below="@+id/featured"
                        android:background="#2075B9"
                        android:scrollbars="none"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/all_apps"
                android:background="#F4F4F4"
                android:elevation="4dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_apps"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="left|start"
                    android:padding="15dp"
                    fontPath="fonts/IRANSans_Bold.ttf"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_all_apps"
                android:background="@color/white"
                android:paddingLeft="7.5dp"
                android:paddingRight="7.5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.SwipeRefreshLayout>